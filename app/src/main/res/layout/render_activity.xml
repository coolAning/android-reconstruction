<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg"
        android:background="@color/colorMain"
        >

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="渲染" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/render_photo_iv"
            android:layout_weight="1"
            style="@style/match_match"
            android:background="@color/alpha_3"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/move_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="移动" />

                <ImageButton
                    android:id="@+id/w_ib"
                    style="@style/w_img"
                    android:layout_below="@+id/move_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp" />

                <ImageButton
                    android:id="@+id/s_ib"
                    style="@style/s_img"
                    android:layout_below="@+id/w_ib"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:id="@+id/a_ib"
                    style="@style/a_img"
                    android:layout_marginTop="100dp"

                    />

                <ImageButton
                    android:id="@+id/d_ib"
                    style="@style/d_img"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="0dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/direction_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="方向" />

                <ImageButton
                    android:id="@+id/direction_w_ib"
                    style="@style/w_img"
                    android:layout_below="@+id/direction_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp" />

                <ImageButton
                    android:id="@+id/direction_s_ib"
                    style="@style/s_img"
                    android:layout_below="@+id/direction_w_ib"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:id="@+id/direction_a_ib"
                    style="@style/a_img"
                    android:layout_marginTop="100dp"

                    />

                <ImageButton
                    android:id="@+id/direction_d_ib"
                    style="@style/d_img"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="0dp" />


            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>


</LinearLayout>