<resources xmlns:android="http://schemas.android.com/apk/res/android">



    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>



    <style name="SplashTheme" parent="android:Theme.NoTitleBar.Fullscreen">

        <!-- 闪屏背景，可用图片 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="bottom_tab_ll" parent="ll_vertical_match_match">
        <item name="android:width">0dp</item>
    </style>

    <style name="bottom_tab_iv" parent="img_btn"></style>

    <style name="bottom_tab_tv" parent="text_micro">
        <item name="android:textColor">@color/black_to_white</item>
    </style>


<!--    图片按钮-->
    <!--    加号按钮-->
    <style name="add_img" parent="wrap_wrap">
        <item name="android:background">@drawable/add_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <!--    忘记密码-->
    <style name="forget_password_img" parent="wrap_wrap">
        <item name="android:background">@drawable/forget_password_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <!--    d按钮-->
    <style name="d_img" parent="wrap_wrap">
        <item name="android:background">@drawable/d_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>

    </style>
    <!--    s按钮-->
    <style name="s_img" parent="wrap_wrap">
        <item name="android:background">@drawable/s_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>

    </style>
    <!--    w按钮-->
    <style name="w_img" parent="wrap_wrap">
        <item name="android:background">@drawable/w_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>
    </style>
    <!--    a按钮-->
    <style name="a_img" parent="wrap_wrap">
        <item name="android:background">@drawable/a_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">30dp</item>

    </style>

    <!-- Common button style -->
    <style name="common_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/round_btn</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    topbar主题-->
    <style name="topbar_customize">
        <item name="android:background">@color/colorLogin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
    </style>



</resources>